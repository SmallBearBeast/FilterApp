<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jason.heartratedetection">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".ui.App"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon"
        android:label="LAB"
        android:theme="@style/FullTheme">
        <activity
            android:name=".ui.activity.WelcomeAct"
            android:theme="@style/FullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.CameraAct"
            android:theme="@style/FullTheme" />

        <activity
            android:name=".ui.activity.PhotoMsgAct"
            android:theme="@style/FullTheme" />

        <activity
            android:name=".ui.activity.SolvePhotoAct"
            android:theme="@style/FullTheme" />

        <activity
            android:name=".ui.activity.PhotoAct"
            android:theme="@style/FullTheme" />
    </application>

</manifest>