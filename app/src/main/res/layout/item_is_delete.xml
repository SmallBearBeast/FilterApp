<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_center_vertical"
    android:orientation="vertical"
    android:background="@color/cl_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="@dimen/dp_10"
        android:text="删除"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/cl_gray_9"
        style="@style/tv_normal" />
    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:text="确定从本地删除这张照片?"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/cl_gray_9"
        style="@style/tv_normal" />
    <View
        style="@style/v_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/ll_center_horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="取消"
            android:textColor="@color/cl_gray_9"
            android:layout_weight="1"
            style="@style/tv_normal" />

        <View
            style="@style/v_hor_divider"/>
        <TextView
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="确认"
            android:id="@+id/tv_comfirm"
            android:layout_weight="1"
            android:textColor="@color/cl_blue_9"
            style="@style/tv_normal" />
    </LinearLayout>
</LinearLayout>