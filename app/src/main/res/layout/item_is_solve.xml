<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/fl_normal"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="@dimen/dp_50">

    <com.example.jason.heartratedetection.ui.widget.shape.ShapeTextView
        android:id="@+id/stv_cancel"
        style="@style/tv_normal"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_vertical|left"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:text="×"
        android:textColor="@color/cl_gray_8"
        android:textSize="@dimen/sp_14"
        app:sv_shape="oval"
        app:sv_stroke_color="@color/cl_gray_7"
        app:sv_stroke_width="@dimen/dp_1" />

    <TextView
        android:id="@+id/tv_case_title"
        android:layout_gravity="center"
        android:textColor="@color/cl_blue_9"
        android:text="黑科技"
        style="@style/tv_normal" />
    <com.example.jason.heartratedetection.ui.widget.shape.ShapeTextView
        android:id="@+id/stv_complete"
        style="@style/tv_normal"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:text="√"
        android:textColor="@color/cl_gray_8"
        android:textSize="@dimen/sp_14"
        app:sv_shape="oval"
        app:sv_stroke_color="@color/cl_gray_7"
        app:sv_stroke_width="@dimen/dp_1" />
</FrameLayout>